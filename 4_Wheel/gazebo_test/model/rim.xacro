<?xml version='1.0'?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:include filename="$(find gazebo_test)/model/roller.xacro"/>
<xacro:macro name="rim" params="name parent xyz rpy GAZEBO_color">
  <link name="rim_${name}_link">
    <inertial>
      <mass value="0.10"/>
      <inertia ixx="7.6e-5" ixy="0.0" ixz="0.0" iyy="7.6e-5" iyz="0.0" izz="0.000125"/>
    </inertial>
    <visual>
      <geometry>
        <cylinder radius="0.050" length="0.0364"/>
      </geometry>
    </visual>
  </link>
  <joint name="${parent}_rim_${name}_joint" type="continuous">
    <parent link="${parent}"/>
    <child link="rim_${name}_link"/>
    <axis xyz = "0 0 1"/>
    <origin
    xyz = "${xyz}"
    rpy = "${rpy}"
    />
    <limit effort="1000" velocity="3140"/>
  </joint>
<xacro:roller name="1" parent="${name}"  xyz="0.0415 0 -0.0102" rpy="1.57 0 0"/>
<xacro:roller name="2" parent="${name}"  xyz="0.0390 0.0142 0.0102" rpy="1.57 0 0.3491"/>
<xacro:roller name="3" parent="${name}"  xyz="0.0318 0.0267 -0.0102" rpy="1.57 0 0.6981"/>
<xacro:roller name="4" parent="${name}"  xyz="0.0208 0.0359 0.0102" rpy="1.57 0 1.0472"/>
<xacro:roller name="5" parent="${name}"  xyz="0.0072 0.0409 -0.0102" rpy="1.57 0 1.3963"/>
<xacro:roller name="6" parent="${name}"  xyz="-0.0072 0.0409 0.0102" rpy="1.57 0 1.7453"/>
<xacro:roller name="7" parent="${name}"  xyz="-0.0208 0.0359 -0.0102" rpy="1.57 0 2.0944"/>
<xacro:roller name="8" parent="${name}"  xyz="-0.0318 0.0267 0.0102" rpy="1.57 0 2.4435"/>
<xacro:roller name="9" parent="${name}"  xyz="-0.0390 0.0142 -0.0102" rpy="1.57 0 2.7925"/>
<xacro:roller name="10" parent="${name}"  xyz="-0.0415 0 0.0102" rpy="1.57 0 3.1416"/>
<xacro:roller name="11" parent="${name}"  xyz="-0.0390 -0.0142 -0.0102" rpy="1.57 0 3.4907"/>
<xacro:roller name="12" parent="${name}"  xyz="-0.0318 -0.0267 0.0102" rpy="1.57 0 3.8397"/>
<xacro:roller name="13" parent="${name}"  xyz="-0.0208 -0.0359 -0.0102" rpy="1.57 0 4.1888"/>
<xacro:roller name="14" parent="${name}"  xyz="-0.00072 -0.0409 0.0102" rpy="1.57 0 4.5379"/>
<xacro:roller name="15" parent="${name}"  xyz="0.0072 -0.0409 -0.0102" rpy="1.57 0 4.8869"/>
<xacro:roller name="16" parent="${name}"  xyz="0.0208 -0.0359 0.0102" rpy="1.57 0 5.2360"/>
<xacro:roller name="17" parent="${name}"  xyz="0.0318 -0.0267 -0.0102" rpy="1.57 0 5.5851"/>
<xacro:roller name="18" parent="${name}"  xyz="0.0390 -0.0142 0.0102" rpy="1.57 0 5.9341"/>

  <transmission name="${name}_wheel_tran">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${parent}_rim_${name}_joint">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
    </joint>
    <actuator name="${name}_wheel_motor">
      <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <gazebo reference="rim_${name}_link">
    <material value= "${GAZEBO_color}"/>
  </gazebo>

</xacro:macro>
</robot>